@using myFirstapp.Models
@model List<Product>

@{
    ViewData["Title"] = "Inventory";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Inventory Management</h2>
        <a class="btn btn-success btn-lg" asp-action="AddItem">
            ➕ Add New Product
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center py-4">
            No products found in inventory! 🚫
        </div>
    }
    else
    {
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Price (₹)</th>
                    <th>Added On</th>
                    <th style="width:160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td class="fw-semibold">@p.Name</td>
                        <td>@p.Category</td>
                        <td>
                            @if(p.Quantity == 0)
                            {
                                <span class="badge bg-danger">Out of Stock</span>
                            }
                            else if(p.Quantity < 5)
                            {
                                <span class="badge bg-warning text-dark">Low (@p.Quantity)</span>
                            }
                            else
                            {
                                <span class="badge bg-success">@p.Quantity</span>
                            }
                        </td>
                        <td>@p.Price</td>
                        <td>@p.CreatedAt.ToShortDateString()</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-primary btn-sm">✏ Edit</a>
                            <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm text-white">👁 View</a>
                            <form asp-action="Delete" asp-route-id="@p.Id" method="post">
                                <button type="submit" onclick = "return confirm('Are you sure ?')" class="btn btn-danger btn-sm">🗑 Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

