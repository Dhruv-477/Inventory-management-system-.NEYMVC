@model Product;

@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" value="@Model.Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Category</label>
        <input asp-for="Category" value="@Model.Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input asp-for="Quantity" value="@Model.Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" value="@Model.Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3" >Save Changes</button>
    <a href="/Products/Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}